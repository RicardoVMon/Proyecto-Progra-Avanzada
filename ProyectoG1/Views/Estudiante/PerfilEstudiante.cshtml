@model ProyectoG1.Models.EstudianteModel

<div class="container-fluid p-0">

    <div class="mb-3">
        <h1 class="h3 d-inline align-middle">Perfil de Estudiante</h1>
    </div>


    @if (ViewBag.MensajeError != null)
    {
        <div class="alert alert-danger text-center" role="alert">
            @ViewBag.MensajeError
        </div>
    }
    @if (ViewBag.MensajeExito != null)
    {
        <div class="alert alert-success text-center" role="alert">
            @ViewBag.MensajeExito
        </div>
    }

    <div class="row">

        <!-- Detalles -->
        <div class="col-md-4 col-xl-3">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">Detalles</h5>
                </div>
                <div class="card-body text-center">
                    <img src="@Model.Imagen" alt="profile-pic" class="img-fluid rounded-circle mb-2" style="width: 128px; height: 128px; object-fit: cover;" />
                    <h5 class="card-title mb-0">@Model.Nombre @Model.Apellidos</h5>
                    <div style="padding: 10px 20px;">

                        @*Mostrar solo en los perfiles de otros usuarios*@
                        <a class="btn btn-primary btn-sm" href="#">Conectar</a>

                        @*Mostrar solo en el propio perfil del usuario actual*@
                        <a class="btn btn-warning btn-sm" href="@Url.Action("EditarPerfilEstudiante","Estudiante")">Editar</a>

                    </div>
                    <hr class="my-0" />
                    <div class="card-body">
                        <h5 class="h6 card-title">Acerca De</h5>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-1"><span data-feather="home" class="feather-sm me-1"></span> Estudiante en @Model.NombreUniversidad</li>
                            <li class="mb-1"><span data-feather="briefcase" class="feather-sm me-1"></span> Carrera en @Model.Carrera</li>
                            <li class="mb-1"><span data-feather="briefcase" class="feather-sm me-1"></span> 20 Conexiones</li>
                        </ul>
                    </div>
                    <hr class="my-0" />
                    <div class="card-body">
                        <h5 class="h6 card-title">Contacto</h5>
                        <ul class="list-unstyled mb-0">
                            <li class="mb-1">@Model.Email</li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>

        <!-- Biografía Del Perfil -->
        <div class="col-md-8 col-xl-9">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Biografía Del Perfil</h5>
                </div>
                <div class="card-body h-100">
                    @Model.Descripcion
                </div>
            </div>
        </div>

    </div>

</div>
