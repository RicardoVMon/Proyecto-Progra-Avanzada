@model ProyectoG1.Models.EstudianteModel

<div class="container-fluid p-0">

    <div class="mb-3">
        <h1 class="h3 d-inline align-middle">Perfil de Estudiante</h1>
    </div>

    @if (ViewBag.MensajeError != null)
    {
        <div class="alert alert-danger text-center" role="alert">
            @ViewBag.MensajeError
        </div>
    }

    @using (Html.BeginForm("EditarPerfilEstudiante", "Estudiante"))
    {
        <div class="row">

            <!-- Detalles -->
            <div class="col-md-4 col-xl-3">
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Detalles</h5>
                    </div>
                    <div class="card-body text-center">
                        <img src="@Model.Imagen" alt="profile-pic" class="img-fluid rounded-circle mb-2" style="width: 128px; height: 128px; object-fit: cover;" />
                        <h5 class="card-title mb-0">@Model.Nombre @Model.Apellidos</h5>
                        <div style="padding: 10px 20px;">

                            <a class="btn btn-danger btn-sm" href="@Url.Action("PerfilEstudiante","Estudiante")">Cancelar</a>
                            <button type="submit" class="btn btn-success btn-sm">Guardar Cambios</button>

                        </div>
                        <hr class="my-0" />
                        <div class="card-body">
                            <h5 class="h6 card-title">Acerca De</h5>
                            <ul class="list-unstyled mb-0">
                                <li class="mb-1"><span data-feather="home" class="feather-sm me-1"></span> Estudiante en  @Html.DropDownListFor(m => m.IdUniversidad, ViewBag.Universidades as List<SelectListItem>, new { @class = "form-control" }) </li>
                                <li class="mb-1"><span data-feather="briefcase" class="feather-sm me-1"></span> Carrera en @Html.TextBoxFor(m => m.Carrera, new { @class = "form-control" }) </li>
                            </ul>
                        </div>
                        <hr class="my-0" />
                        <div class="card-body">
                            <h5 class="h6 card-title">Contacto</h5>
                            <ul class="list-unstyled mb-0">
                                <li class="mb-1">@Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "email" })</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Biografía Del Perfil -->
            <div class="col-md-8 col-xl-9">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Biografía Del Perfil</h5>
                    </div>
                    <div class="card-body h-100">
                        @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>
